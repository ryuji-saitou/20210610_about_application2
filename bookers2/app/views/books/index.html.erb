<!--books / index-->
<div class="container">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-detail-item"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">

    <!--ここからUser info-->
    <%= render "users/user_info", user:@user %>
    <!--ここまでUser info-->

    <!--ここからNew book-->
    <%= render "books/new_book_form" %>
    <!--ここまでNew book-->

    </div>

    <!--ここからBooks-->
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table">
        <thead class="border-bottom">
          <tr class="border-bottom">
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!--ここまでBooks-->

  </div>
</div>