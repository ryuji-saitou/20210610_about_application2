<!--users / index-->
<div class="container">
  <% if @book.errors.any? %>
    <div class="error">
      <div class="error-message">
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      </div>
      <ul class="error-detail">
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-detail-item"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">

    <!--ここからUser info-->
    <%= render "users/user_info", user:@user %>
    <!--ここまでUser info-->

      <!--ここからNew book-->
      <%= render "books/new_book_form" %>
      </div>
      <!--ここまでNew book-->

    <!--ここからUsers-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead class="border-bottom">
          <tr class="border-bottom">
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %></td>
              <td style="width:65%"><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!--ここまでUsers-->
  </div>
</div>