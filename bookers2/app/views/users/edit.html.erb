<h1>User info</h1>
<%= form_with model:@user, url:user_path(current_user.id), local:true do |f| %>
  <% if @user.errors.any? %>
    <div class="error">
      <div class="error-message">
        <h2><%= @user.errors.count %> error prohibited this book from being saved:</h2>
      </div>
      <ul class="error-detail">
        <% @user.errors.full_messages.each do |message| %>
          <li class="error-detail-item"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %></br>
  <%= f.text_field :name %></br>
  <%= f.label :profile_image %></br>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg" %></br>
  <%= f.attachment_field :profile_image, placeholder:"イメージ画像" %></br>
  <%= f.label :introduction %></br>
  <%= f.text_field :introduction %></br>
  <%= f.submit "Update User" %>
<% end %>