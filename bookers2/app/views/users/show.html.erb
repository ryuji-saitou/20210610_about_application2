<!--users / show-->
<div class="container px-5">
  <div class="row">
    <div class="col-md-3">

    <!--ここからUser info-->
    <%= render "users/user_info", user:@user %>
    <!--ここまでUser info-->

      <!--ここからNew book-->
      <%= render "books/new_book_form" %>
      </div>
      <!--ここまでNew book-->

    <!--ここからBooks-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead class="thead border-bottom">
          <tr class="border-bottom">
            <th class="table-item col-2"></th>
            <th class="table-item">Title</th>
            <th class="table-item">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="table-item "><%= link_to user_path(@user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %><% end %></td>
              <td class="table-item"><%= link_to book.title, book_path(book.id) %></td>
              <td class="table-item"><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!--ここまでBooks-->
  </div>
</div>