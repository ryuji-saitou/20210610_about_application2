<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <% if @book.errors.count == 1 %>
          <h3 class="text-danger"><%= @book.errors.count %> error prohibited this product from being saved:</h3>
          <% @book.errors.full_messages.each do |error_message| %>
            <li class="text-danger"><%= error_message %></li>
          <% end %>
        <% else %>
          <h3 class="text-danger"><%= @book.errors.count %> errors prohibited this product from being saved:</h3>
          <% @book.errors.full_messages.each do |error_message| %>
            <li class="text-danger"><%= error_message %></li>
          <% end %>
        <% end %>
      <% end %>
      <%= form_with model: @book, url: book_path(@book.id), local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %><br>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>