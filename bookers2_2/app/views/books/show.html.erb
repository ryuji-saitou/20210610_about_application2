<div class="container px-0">
  <div class="row">
    <div class="col-3">
      <%= render "users/user_info", user: @user %>
      <%= render "books/book_new", book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td class="text-center">
              <%= attachment_image_tag @book_detail.user, :profile_image, size:"40x40", format:"jpeg", fallback: "no_image.jpg" %>
              <br>
              <%= link_to user_path(@book_detail.user.id) do %>
                <%= @book_detail.user.name %>
              <% end %>
            </td>
            <td class="align-middle">
              <%= link_to book_path(@book_detail.id) do %>
                <%= @book_detail.title %>
              <% end %>
            </td>
            <td class="align-middle"><%= @book_detail.opinion %></td>
            <% if @user.id == current_user.id %>
              <td class="align-middle">
                <%= link_to "Edit", edit_book_path(@book_detail.id), class:"btn btn-success" %>
              </td>
              <td class="align-middle">
                <%= link_to "Destroy", book_path(@book_detail.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
     </div>
</div>
