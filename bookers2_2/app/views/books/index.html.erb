<div class="container px-0">
  <div class="row">
    <div class="col-3">
      <%= render "users/user_info", user: @user %>
      <%= render "books/book_new", book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="align-middle"><%= attachment_image_tag book.user, :profile_image, size:"40x40", format:"jpeg", fallback: "no_image.jpg" %></td>
              <td class="align-middle">
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td class="align-middle"><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>