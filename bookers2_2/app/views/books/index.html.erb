<div class="container px-0">
  <% if @book.errors.any? %>
    <% if @book.errors.count == 1 %>
      <h3 class="text-danger"><%= @book.errors.count %> error prohibited this product from being saved:</h3>
      <% @book.errors.full_messages.each do |error_message| %>
        <li class="text-danger"><%= error_message %></li>
      <% end %>
    <% else %>
      <h3 class="text-danger"><%= @book.errors.count %> errors prohibited this product from being saved:</h3>
      <% @book.errors.full_messages.each do |error_message| %>
        <li class="text-danger"><%= error_message %></li>
      <% end %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= render "books/book_new", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="align-middle">
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, size:"40x40", format:"jpeg", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td class="align-middle"><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>