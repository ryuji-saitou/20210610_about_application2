<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <% if @user.errors.count == 1 %>
          <h3 class="text-danger"><%= @user.errors.count %> error prohibited this product from being saved:</h3>
          <% @user.errors.full_messages.each do |error_message| %>
            <li class="text-danger"><%= error_message %></li>
          <% end %>
        <% else %>
          <h3 class="text-danger"><%= @user.errors.count %> errors prohibited this product from being saved:</h3>
          <% @user.errors.full_messages.each do |error_message| %>
            <li class="text-danger"><%= error_message %></li>
          <% end %>
        <% end %>
      <% end %>
      <%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %><br>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>