<div class="container px-0">
  <div class="row">
    <div class="col-3">
      <%= render "users/user_info", user: @user %>
      <%= render "books/book_new", book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="align-middle"><%= attachment_image_tag user, :profile_image, size:"40x40", format:"jpeg", fallback: "no_image.jpg" %></td>
              <td class="align-middle"><%= user.name %></td>
              <td class="align-middle"><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>