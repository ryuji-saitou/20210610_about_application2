<div class="container px-0">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:"jpeg", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>user name(仮)</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>introduction text(仮)</th>
          </tr>
        </tbody>
      </table>
      <%= link_to root_path do %>
        <div class="row">
          <i class="btn btn-block btn-outline-secondary fas fa-user-cog"></i>
        </div>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, local: true do |f| %>
       <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class:"form-control" %>
       </div>
       <div class="form-group">
        <%= f.label :opinion, "Opinion" %>
        <%= f.text_area :opinion, class:"form-control" %>
       </div>
        <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="align-middle"><%= attachment_image_tag user, :profile_image, size:"40x40", format:"jpeg", fallback: "no_image.jpg" %></td>
              <td class="align-middle"><%= user.name %></td>
              <td class="align-middle"><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>